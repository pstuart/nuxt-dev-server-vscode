{
  "name": "nuxt-dev-server",
  "displayName": "Nuxt Dev Server Manager",
  "description": "Manage Nuxt development servers with status bar integration",
  "version": "0.0.8",
  "publisher": "pstuart",
  "author": {
    "name": "Patrick Stuart"
  },
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pstuart/nuxt-dev-server-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "nuxt",
    "vue",
    "dev server",
    "development",
    "nuxt3"
  ],
  "activationEvents": [
    "workspaceContains:**/nuxt.config.{js,ts,mjs,mts}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nuxt-dev-server.start",
        "title": "Nuxt: Start Dev Server"
      },
      {
        "command": "nuxt-dev-server.stop",
        "title": "Nuxt: Stop Dev Server"
      },
      {
        "command": "nuxt-dev-server.restart",
        "title": "Nuxt: Restart Dev Server"
      },
      {
        "command": "nuxt-dev-server.showAll",
        "title": "Nuxt: Show All Running Instances"
      },
      {
        "command": "nuxt-dev-server.killAll",
        "title": "Nuxt: Kill All Running Instances"
      },
      {
        "command": "nuxt-dev-server.listAndKill",
        "title": "Nuxt: List and Kill Instances"
      },
      {
        "command": "nuxt-dev-server.openBrowser",
        "title": "Nuxt: Open in Browser"
      },
      {
        "command": "nuxt-dev-server.showVersion",
        "title": "Nuxt: Show Version"
      }
    ],
    "keybindings": [
      {
        "command": "nuxt-dev-server.start",
        "key": "ctrl+alt+n s",
        "mac": "cmd+alt+n s",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "nuxt-dev-server.stop",
        "key": "ctrl+alt+n x",
        "mac": "cmd+alt+n x",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "nuxt-dev-server.restart",
        "key": "ctrl+alt+n r",
        "mac": "cmd+alt+n r",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "nuxt-dev-server.openBrowser",
        "key": "ctrl+alt+n o",
        "mac": "cmd+alt+n o",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "configuration": {
      "title": "Nuxt Dev Server Manager",
      "properties": {
        "nuxt-dev-server.defaultPort": {
          "type": "number",
          "default": 3000,
          "minimum": 1,
          "maximum": 65535,
          "description": "Default port for the Nuxt dev server"
        },
        "nuxt-dev-server.preferredPackageManager": {
          "type": "string",
          "enum": [
            "auto",
            "npm",
            "yarn",
            "pnpm",
            "bun"
          ],
          "default": "auto",
          "description": "Preferred package manager (auto-detect if 'auto')"
        },
        "nuxt-dev-server.autoStartOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start dev server when workspace opens"
        },
        "nuxt-dev-server.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notification messages for server events"
        },
        "nuxt-dev-server.updateInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Status bar update interval in milliseconds"
        },
        "nuxt-dev-server.devCommand": {
          "type": "string",
          "default": "dev",
          "description": "Custom dev command (e.g., 'dev', 'dev:custom')"
        },
        "nuxt-dev-server.openBrowserOnStart": {
          "type": "boolean",
          "default": false,
          "description": "Open browser automatically when server starts"
        },
        "nuxt-dev-server.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging to output channel"
        },
        "nuxt-dev-server.autoKillTimeout": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Automatically kill servers after X minutes (0 = disabled). Useful for preventing runaway servers."
        },
        "nuxt-dev-server.autoKillIdleTime": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Automatically kill servers idle for X minutes (0 = disabled). Idle = no file changes detected."
        },
        "nuxt-dev-server.enableAutoCleanup": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic cleanup warnings for extra Nuxt servers not managed by this extension"
        },
        "nuxt-dev-server.maxExtraServers": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Maximum number of extra Nuxt servers allowed (0 = unlimited). Automatically kills oldest servers when exceeded."
        },
        "nuxt-dev-server.gracefulShutdownTimeout": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Time to wait (in milliseconds) for graceful shutdown before force killing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "package:do": "npm run compile && vsce package",
    "package": "npm run version:patch && npm run package:do",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
